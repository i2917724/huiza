<?xml version="1.0" encoding="utf-8" ?>
<resources>


  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowActionBar">false</item>
    
    <item name="android:windowBackground">@color/background</item>

    <item name="colorControlNormal">@color/white</item>
    <item name="colorControlActivated">@color/verde</item>
    <item name="colorControlHighlight">@color/verde</item>
    <item name="android:textColorHint">@color/white</item>

    <item name="colorButtonNormal">@color/primary_darker</item>
    <item name="android:colorButtonNormal">@color/primary_darker</item>
  </style>
  
  <style name="MyThemeSplash" parent="android:Theme.Material.Light">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
    <item name="colorAccent">@color/white</item>
    <item name="android:textColorPrimary">@color/iron</item>
    <item name="android:background">@color/primary</item>
  </style>
  
</resources>
